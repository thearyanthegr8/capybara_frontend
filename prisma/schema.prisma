generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @unique @default(uuid())
  name         String
  mobile       String
  email        String
  type         ProfileType
  Prescription Prescription[]
}

enum ProfileType {
  DOCTOR
  PHARMACIST
}

model Prescription {
  p_id      String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())

  patientName        String
  patientAge         Int
  patientGender      String
  patientWeight      Int?
  patientHeight      Int?
  patientTemperature Int?

  medicines Json
  notes     String?
}
